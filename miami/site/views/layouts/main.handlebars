<script>
$(function() {
    // Initialize the packages carousel
    $('.owl-packages').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 2
            },
            1000: {
                items: 3
            }
        }
    });

    // Initialize the slideshow carousel
    $('.owl-slideshow').owlCarousel({
        items: 1, // Changed to 1 to display one image at a time
        loop: true,
        margin: 10,
        autoplay: true,
        autoplayTimeout: 2500,
        autoplayHoverPause: true,
        responsive: { // Correctly added the responsive property here
            0: {
                items: 1
            },
            600: {
                items: 1
            },
            1000: {
                items: 1
            }
        }
    });
});
</script>

